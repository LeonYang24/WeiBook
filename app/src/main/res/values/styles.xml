<resources>

    <!-- Base application theme. -->
        <style name="AppTheme" parent="android:Theme.Holo.Light.DarkActionBar">
            <item name="android:actionBarStyle">@style/ActionBar</item>
            <item name="android:actionOverflowButtonStyle">@style/ActionBarOverflowButtonStyle</item>
            <item name="android:itemTextAppearance">@style/ActionBarTextAppearance</item>
            <item name="android:itemBackground">@color/actionbar_item_color</item>
        </style>

    <!-- ActionBar -->
        <style name="ActionBar" parent="android:Widget.Holo.ActionBar">
            <item name="android:displayOptions">showTitle</item>
            <item name="android:background">@color/actionbar_bg_color</item>
            <item name="android:titleTextStyle">@style/ActionBarTitleText</item>
        </style>

    <!-- Set The ActionBar's OverflowButtonStyle-->
        <style name="ActionBarOverflowButtonStyle" parent="android:style/Widget.Holo.ActionButton.Overflow">
            <item name="android:src">@mipmap/action_bar_plus</item>
        </style>

    <!-- Set MenuItem Color -->
        <style name="ActionBarTextAppearance" parent="TextAppearance.Small">
            <item name="android:textColor">@color/actionbar_item_text_color</item>
            <item name="android:textSize">16sp</item>
        </style>

    <!-- -->
        <style name="ActionBarTitleText" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title">
            <item name="android:textColor">@color/actionbar_title_color</item>
            <item name="android:textSize">17sp</item>
        </style>





    <style name="My.Button.logout" parent="My.TextView._White">
        <item name="android:background">@drawable/btn_logout_selector</item>
    </style>

    <!-- divider -->
    <style name="DividerLine">
        <item name="android:background">@color/divider_line_color</item>
    </style>

    <style name="DividerLine.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1px</item>
    </style>

    <style name="DividerLine.Vertical">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">1dp</item>
    </style>

    <!-- editText -->
    <style name="EditText" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="EditText.UserName">
        <item name="android:singleLine">true</item>
        <item name="android:maxLength">30</item>
    </style>

    <style name="EditText.Password">
        <item name="android:singleLine">true</item>
        <item name="android:inputType">textPassword</item>
    </style>

    <!-- activity-->
    <style name="AVActivity.NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/common_blue</item>
        <item name="colorPrimaryDark">@color/common_blue</item>
        <item name="colorAccent">@color/common_blue</item>
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:editTextStyle">@style/EditText</item>
    </style>

    <!-- activity_userregister.xml -->
    <style name="Register_Input">
        <item name="android:orientation">horizontal</item>
        <item name="android:background">@drawable/base_edit_input</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/base_action_bar_height</item>
        <item name="android:layout_marginTop">@dimen/register_margin</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:layout_marginRight">@dimen/register_margin</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="My">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="My.ImageView">
        <item name="android:contentDescription">@string/app_name</item>
    </style>

    <style name="My.TextView">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="My.TextView._Black">
        <item name="android:textColor">@color/chat_base_color_text_black</item>
    </style>

    <style name="Register_Edit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:layout_marginLeft">@dimen/register_margin</item>
        <item name="android:background">@color/chat_transparent</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/chat_base_color_text_black</item>
    </style>

    <!-- ContactAddFriendActivity -->
    <style name="My.TextView._White">
        <item name="android:textColor">@color/chat_base_color_text_white</item>
    </style>

    <style name="My.ImageView.Photo_Avatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <!-- search_user_item_layout.xml -->
    <style name="My.ImageView.Photo_Middle">
        <item name="android:layout_width">60dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:scaleType">fitXY</item>
    </style>

    <style name="My.Button.theme" parent="My.TextView._White">
        <item name="android:background">@drawable/common_btn</item>
    </style>

    <!-- RecordButton -->
    <style name="chat_record_button_toast_dialog_style">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowBackground">@drawable/chat_record_button_round_background</item>
    </style>

    <!-- Avatar -->
    <style name="Avatar">
        <item name="android:layout_width">45dp</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:scaleType">centerCrop</item>
        <item name="android:src">@mipmap/chat_default_user_avatar</item>
    </style>

    <style name="chat_play_btn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Avatar.Large">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
    </style>

    <!-- text appearance -->
    <style name="TextAppearance"/>

    <style name="TextAppearance.Large">
        <item name="android:textSize">@dimen/textsize_large</item>
    </style>

    <style name="TextAppearance.Large.Gray">
        <item name="android:textColor">@color/common_gray</item>
    </style>

    <style name="TextAppearance.Normal">
        <item name="android:textSize">@dimen/textsize_normal</item>
    </style>

    <style name="TextAppearance.Normal.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextAppearance.Normal.Gray">
        <item name="android:textColor">@color/common_gray</item>
    </style>

    <style name="TextAppearance.Small"/>

    <style name="conversation_detail_base_left_layout">
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/group_detail_btn</item>
    </style>

    <style name="conversation_detail_base_left_style">
        <item name="android:layout_marginLeft">30dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>
